@model Streaming_Video_MVC.Models.Actor

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/Admin_Layout.cshtml";
}
@{   
    var data = ViewBag.Messerger;  
}  
<h1>Edit</h1>

<h4>Actor</h4>
<hr />
<div class="row">
    <div class="col-md-5" style="margin:auto;min-height:53vh; display:flex;flex-direction:column">
        <form asp-action="UpdateActor">
            
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdActor"  value=@data.IdActor />

            <div class="form-group">
                <label asp-for="NameActor" class="control-label"></label>
                <input asp-for="NameActor" class="form-control" value=@data.NameActor />
                <span asp-validation-for="NameActor" class="text-danger"></span>
                <br />
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" value=@data.Description />
                <span asp-validation-for="Description" class="text-danger"></span>
                <br />
            </div>
            <div class="form-group">
                <label asp-for="UrlImg" class="control-label"></label>
                <input asp-for="UrlImg" class="form-control" value=@data.Description />
                <span asp-validation-for="UrlImg" class="text-danger"></span>
                <br />
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-dark" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="link-dark" style="margin-top:auto"> < Back to List</a>
</div>

