@model Streaming_Video_MVC.Models.Film

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/Admin_Layout.cshtml";
}

<h1>Create</h1>

<h4>Film</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdFilm" />
            <div class="form-group">
                <label asp-for="IdAdmin" class="control-label"></label>
                <input asp-for="IdAdmin" class="form-control" readonly=true value="@ViewBag.IdAdmin">
                <span asp-validation-for="IdAdmin" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Country" class="control-label"></label>
                <select asp-for="Country" class="form-control" >
                    @foreach(var iteam in ViewBag.country)
                    {
                        <option>@iteam.countried</option>
                    }
                </select>
                <span asp-validation-for="Country" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UrlImg" class="control-label"></label>
                <input asp-for="UrlImg" class="form-control" />
                <span asp-validation-for="UrlImg" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UrlFilm" class="control-label"></label>
                <input asp-for="UrlFilm" class="form-control" />
                <span asp-validation-for="UrlFilm" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="YearPublic" class="control-label"></label>
                <input asp-for="YearPublic" class="form-control" />
                <span asp-validation-for="YearPublic" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AgeLimit" class="control-label"></label>
                <input asp-for="AgeLimit" class="form-control" />
                <span asp-validation-for="AgeLimit" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StatusDelete" class="control-label"></label>
                <input asp-for="StatusDelete" class="form-control" />
                <span asp-validation-for="StatusDelete" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

