@model Streaming_Video_MVC.Models.Director

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/Admin_Layout.cshtml";
}
@{   
    var data = ViewBag.Messerger;  
} 
<h1>Edit</h1>

<h4>Director</h4>
<hr />
<div class="row">
    <div class="col-md-5" style="margin:auto;min-height:53vh; display:flex;flex-direction:column">
        <form asp-action="Edit" enctype="multipart/form-data">
            <input type="hidden" asp-for="Id" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" value=@data.Name />
                <span asp-validation-for="Name" class="text-danger"></span>
                <br />
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" value=@data.Description/>
                <span asp-validation-for="Description" class="text-danger"></span>
                <br />
            </div>
            <img src=@data.UrlImg style="width:200px;height:200px"/>
            <div class="form-group">
                <label asp-for="UrlImg" class="control-label"></label>
                <input asp-for="UrlImg" type="file" class="form-control" value=@data.UrlImg/>
                <span asp-validation-for="UrlImg" class="text-danger"></span>
                <br />
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-dark" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="link-dark" style="margin-top:auto"> < Back to List</a>
</div>

